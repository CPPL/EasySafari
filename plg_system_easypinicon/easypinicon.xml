                       type="filelist"
                       default=""
                       label="PLG_SYSTEM_EASYPINICON_SETTINGS_PIN_LOGO_FILE_LABEL"
                       description="PLG_SYSTEM_EASYPINICON_SETTINGS_PIN_LOGO_FILE_DESC"
                       directory="images" filter="\.svg" exclude="" stripext="" />
                <field name="pin_icon_color"
                       type="color"
                       default="#000"
                       label="PLG_SYSTEM_EASYPINICON_SETTINGS_PIN_LOGO_CUSTOM_COLOUR_LABEL"
                       description="PLG_SYSTEM_EASYPINICON_SETTINGS_PIN_LOGO_CUSTOM_COLOUR_DESC" />
